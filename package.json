{
  "name": "extract-git-treeish",
  "description": "extract git tree-ish (commits, branches, or tags) into target directory",
  "version": "2.0.0",
  "author": {
    "name": "Takuto Wada",
    "email": "takuto.wada@gmail.com",
    "url": "https://github.com/twada"
  },
  "bugs": "https://github.com/twada/extract-git-treeish/issues",
  "dependencies": {
    "tar": "^6.1.9"
  },
  "devDependencies": {
    "@twada/mocha-spec-tree-reporter": "^0.2.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.14.0",
    "@types/tar": "^6.1.4",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.7.0",
    "mocha": "^10.0.0",
    "prettier": "^2.8.4",
    "rimraf": "^4.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-node-externals": "^5.1.2",
    "semistandard": "^16.0.0",
    "snazzy": "^9.0.0",
    "typescript": "^4.9.5"
  },
  "files": [
    "CHANGELOG.md",
    "README.md",
    "src",
    "dist",
    "package.json"
  ],
  "homepage": "http://github.com/twada/extract-git-treeish",
  "keywords": [
    "git"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "exports": {
    "import": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    },
    "require": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "http://github.com/twada/extract-git-treeish.git"
  },
  "scripts": {
    "preversion": "npm run build && npm test",
    "build": "npm run build:clean && npm run build:mjs && npm run build:cjs",
    "build:clean": "rimraf dist",
    "build:mjs": "tsc",
    "build:cjs": "rollup -c",
    "lint:eslint": "eslint src --ext .mts",
    "lint:prettier": "prettier --check src",
    "lint:test": "semistandard --verbose test | snazzy",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "fix:test": "semistandard --fix test",
    "fix": "npm run fix:eslint && npm run fix:prettier",
    "test": "npm run lint && npm run test:unit",
    "test:doc": "mocha test --reporter @twada/mocha-spec-tree-reporter",
    "test:unit": "mocha test"
  },
  "semistandard": {
    "globals": [
      "describe",
      "context",
      "beforeEach",
      "afterEach",
      "it"
    ]
  }
}
